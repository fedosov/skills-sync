{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillssync.dev/schema/state.v2.json",
  "title": "SkillsSync State",
  "type": "object",
  "required": [
    "version",
    "generated_at",
    "sync",
    "summary",
    "subagent_summary",
    "skills",
    "subagents",
    "mcp_servers",
    "top_skills",
    "top_subagents"
  ],
  "properties": {
    "version": { "type": "integer", "const": 2 },
    "generated_at": { "type": "string", "format": "date-time" },
    "sync": {
      "type": "object",
      "required": [
        "status",
        "last_started_at",
        "last_finished_at",
        "duration_ms",
        "error",
        "warnings"
      ],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "failed", "syncing", "unknown"] },
        "last_started_at": { "type": ["string", "null"], "format": "date-time" },
        "last_finished_at": { "type": ["string", "null"], "format": "date-time" },
        "duration_ms": { "type": ["integer", "null"], "minimum": 0 },
        "error": { "type": ["string", "null"] },
        "warnings": { "type": "array", "items": { "type": "string" } }
      }
    },
    "summary": {
      "type": "object",
      "required": ["global_count", "project_count", "conflict_count", "mcp_count", "mcp_warning_count"],
      "properties": {
        "global_count": { "type": "integer", "minimum": 0 },
        "project_count": { "type": "integer", "minimum": 0 },
        "conflict_count": { "type": "integer", "minimum": 0 },
        "mcp_count": { "type": "integer", "minimum": 0 },
        "mcp_warning_count": { "type": "integer", "minimum": 0 }
      }
    },
    "subagent_summary": {
      "type": "object",
      "required": ["global_count", "project_count", "conflict_count", "mcp_count", "mcp_warning_count"],
      "properties": {
        "global_count": { "type": "integer", "minimum": 0 },
        "project_count": { "type": "integer", "minimum": 0 },
        "conflict_count": { "type": "integer", "minimum": 0 },
        "mcp_count": { "type": "integer", "minimum": 0 },
        "mcp_warning_count": { "type": "integer", "minimum": 0 }
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "scope",
          "workspace",
          "canonical_source_path",
          "target_paths",
          "exists",
          "is_symlink_canonical",
          "package_type",
          "skill_key",
          "symlink_target",
          "status",
          "archived_at",
          "archived_bundle_path",
          "archived_original_scope",
          "archived_original_workspace"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "scope": { "type": "string" },
          "workspace": { "type": ["string", "null"] },
          "canonical_source_path": { "type": "string" },
          "target_paths": { "type": "array", "items": { "type": "string" } },
          "exists": { "type": "boolean" },
          "is_symlink_canonical": { "type": "boolean" },
          "package_type": { "type": "string" },
          "skill_key": { "type": "string" },
          "symlink_target": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "archived"] },
          "archived_at": { "type": ["string", "null"], "format": "date-time" },
          "archived_bundle_path": { "type": ["string", "null"] },
          "archived_original_scope": { "type": ["string", "null"] },
          "archived_original_workspace": { "type": ["string", "null"] }
        }
      }
    },
    "subagents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "scope",
          "workspace",
          "canonical_source_path",
          "target_paths",
          "exists",
          "is_symlink_canonical",
          "package_type",
          "subagent_key",
          "symlink_target",
          "model",
          "tools",
          "codex_tools_ignored"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "scope": { "type": "string" },
          "workspace": { "type": ["string", "null"] },
          "canonical_source_path": { "type": "string" },
          "target_paths": { "type": "array", "items": { "type": "string" } },
          "exists": { "type": "boolean" },
          "is_symlink_canonical": { "type": "boolean" },
          "package_type": { "type": "string" },
          "subagent_key": { "type": "string" },
          "symlink_target": { "type": "string" },
          "model": { "type": ["string", "null"] },
          "tools": { "type": "array", "items": { "type": "string" } },
          "codex_tools_ignored": { "type": "boolean" }
        }
      }
    },
    "mcp_servers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "server_key",
          "scope",
          "workspace",
          "transport",
          "command",
          "args",
          "url",
          "env",
          "enabled_by_agent",
          "targets",
          "warnings"
        ],
        "properties": {
          "server_key": { "type": "string" },
          "scope": { "type": "string", "enum": ["global", "project"] },
          "workspace": { "type": ["string", "null"] },
          "transport": { "type": "string", "enum": ["stdio", "http"] },
          "command": { "type": ["string", "null"] },
          "args": { "type": "array", "items": { "type": "string" } },
          "url": { "type": ["string", "null"] },
          "env": { "type": "object", "additionalProperties": { "type": "string" } },
          "enabled_by_agent": {
            "type": "object",
            "required": ["codex", "claude", "project"],
            "properties": {
              "codex": { "type": "boolean" },
              "claude": { "type": "boolean" },
              "project": { "type": "boolean" }
            }
          },
          "targets": { "type": "array", "items": { "type": "string" } },
          "warnings": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "top_skills": {
      "type": "array",
      "items": { "type": "string" }
    },
    "top_subagents": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
