{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SkillsSync Desktop",
  "version": "0.2.1",
  "identifier": "dev.fedosov.skillssync.desktop",
  "build": {
    "beforeDevCommand": "npm --prefix . run dev || npm --prefix ./ui run dev || npm --prefix ../ui run dev",
    "beforeBuildCommand": "npm --prefix . run build || npm --prefix ./ui run build || npm --prefix ../ui run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "SkillsSync Desktop",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
